<script>
// var monster0 = {type:"p", model:"500", color:"white"};
<% @battle.p1_battle_monsters.each_with_index do |monster, i| %>
var <%= "monster#{i+1}" %> = {name: "<%= monster.monster.name %>", hp: "<%= monster.hp %>", max_hp: "<%= monster.monster.hp %>", image_front: "/images/monsters/<%= monster.monster.name %>/front.gif", image_back: "/images/monsters/<%= monster.monster.name %>/back.gif", image_large: "/images/monsters/<%= monster.monster.name %>/large.png",  }
<% end %>
<% @battle.p2_battle_monsters.each_with_index do |monster, i| %>
var <%= "monster#{i+5}" %> = {name: "<%= monster.monster.name %>", hp: "<%= monster.hp %>", max_hp: "<%= monster.monster.hp %>", image_front: "/images/monsters/<%= monster.monster.name %>/front.gif", image_back: "/images/monsters/<%= monster.monster.name %>/back.gif", image_large: "/images/monsters/<%= monster.monster.name %>/large.png",  }
<% end %>
<% (1..8).each do |i| %>
 $('#monster<%=i%>-name').text(monster<%= i %>["name"] + ":");
 $('#monster<%=i%>-heathnum').text(monster<%= i %>["hp"]);
 $('#health<%=i%>').attr('max', monster<%= i %>["max_hp"]);
 $('#health<%=i%>').attr('value', monster<%= i %>["hp"]);
 $('#large<%=i%>').attr('src', monster<%=i%>["image_large"]);
<% end %>
<% (1..4).each do |i| %>
$('#anim<%=i%>').attr('src', monster<%=i%>["image_back"]);
$('#anim<%=i+4%>').attr('src', monster<%=i%>["image_front"]);
if (monster<%=i%>["hp"] == 0) {
  $('#anim<%=i%>').hide();
}
<% end %>


</script>

