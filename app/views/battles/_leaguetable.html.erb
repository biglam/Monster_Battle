<!-- <h1 class="leaderheading">Leaderboard</h1> -->
<table>
  <tr>
    <th><h4>Name</h4></th>
    <th><h4>Played</h4></th>
    <th><h4>Won</h4></th>
    <th><h4>Points</h4></th>
  </tr>
  <% @users.each do |user| %>
  <tr>
    <td class='leaderboard'><h4><span><%= user.name %></h4></span></td>
    <td class='leaderboard'><h4><span class="lb-number"><%= user.played %></h4></span></td>
    <td class='leaderboard'><h4><span class="lb-number"><%= user.wins %></h4></span></td>
    <td class='leaderboard'><h4><span class="lb-number"><%= user.points %></h4></span></td>
  </tr>
  <% end %>
</table>